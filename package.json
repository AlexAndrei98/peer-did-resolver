{
  "name": "https-did-resolver",
  "version": "0.0.1",
  "description": "Resolve DID documents from an https domain",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Mike Xu <mike.xu@consensys.net>",
  "license": "Apache-2.0",
  "dependencies": {
    "did-resolver": "^0.0.4",
    "xmlhttprequest": "^1.8.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "dev": "tsc --watch",
    "format": "prettier"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "jest": "^23.6.0",
    "prettier": "^1.14.2",
    "regenerator-runtime": "^0.12.1",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3",
    "xhr-mock": "^2.4.1"
  },

  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ]
  }
}
